
{
  "name": "risechain-token-creation",
  "version": "1.0.0",
  "description": "Pump.fun style token creation system for RiseChain",
  "main": "scripts/deploy-token-factory.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy-token-factory.js --network riseTestnet",
    "deploy:local": "hardhat run scripts/deploy-token-factory.js --network localhost",
    "verify": "hardhat verify --network riseTestnet",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "gas": "REPORT_GAS=true hardhat test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "solhint": "^4.0.0",
    "dotenv": "^16.3.1"
  },
  "keywords": [
    "risechain",
    "defi",
    "token-creation",
    "pump-fun",
    "bonding-curve",
    "memecoin",
    "trading"
  ],
  "author": "Scryptex Team",
  "license": "MIT"
}
